{
  "compilerOptions": {
    "target": "ES2019",                                  
    "module": "commonjs",
    "moduleResolution": "Node",
    "rootDir": "src",
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ],     
    "outDir": "./dist",                           
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                      
    "skipLibCheck": true                                 
  }
}
